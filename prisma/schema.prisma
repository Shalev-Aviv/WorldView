generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int                  @id @default(autoincrement())
  email              String               @unique
  username           String               @unique
  // ... other user fields
  countryVisits      UserCountryVisit[] // Define a relation to the linking table
}

model Country {
  id                 Int                  @id @default(autoincrement())
  name               String               @unique
  code               String               @unique // Example country code field
  countryVisits      UserCountryVisit[] // Define a relation to the linking table
}

model UserCountryVisit {
  id          Int @id @default(autoincrement())
  userId      Int
  countryId   Int
  visitCount  Int @default(1) // Default to 1 visit when a record is created

  user        User    @relation(fields: [userId], references: [id])
  country     Country @relation(fields: [countryId], references: [id])

  @@unique([userId, countryId]) // Ensures a user can only have one entry per country
}